config BR2_PACKAGE_HOSTAPD
	bool "hostapd"
        select BR2_PACKAGE_LIBNL
        select BR2_PACKAGE_OPENSSL
        select BR2_PACKAGE_MADWIFI
	help
          user space daemon for access points, including, e.g., IEEE
	  802.1X/WPA/EAP Authenticator for number of Linux and BSD
          drivers, RADIUS client, integrated EAP server, and RADIUS
          authentication server

          http://hostap.epitest.fi/

config BR2_PACKAGE_HOSTAPD_CLI
	bool "Install hostapd_cli binary"
	depends on BR2_PACKAGE_HOSTAPD
	help
	  Install binary for command-line control of hostapd.

config BR2_PACKAGE_HOSTAPD_WPS
	bool "Enable support for WPS"
	depends on BR2_PACKAGE_HOSTAPD
	help
	  Enable support for Wi-Fi Protected Setup (WPS)
