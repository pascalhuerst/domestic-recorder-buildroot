config BR2_PACKAGE_LIBRAUMFELD
	bool "libraumfeld"
        select BR2_PACKAGE_AVAHI
	select BR2_PACKAGE_GUPNP_AV
        select BR2_PACKAGE_OPENSSL
        select BR2_PACKAGE_LIBARCHIVE
        select BR2_PACKAGE_LIBUNWIND
	select BR2_PACKAGE_RAUMFELD_REPO
	help
	  libraumfeld is a utility library for the Raumfeld software stack

	  http://www.raumfeld.com/

config BR2_PACKAGE_LIBRAUMFELD_PROFILING
	bool "libraumfeld profiling support"
	depends on BR2_PACKAGE_LIBRAUMFELD
	help
	  Enable profiling support in libraumfeld and applications
	  linking against it. This enables instrumentalisation of
	  function calls and is somewhat expensive.
