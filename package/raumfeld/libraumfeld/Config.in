config BR2_PACKAGE_LIBRAUMFELD
	bool "libraumfeld"
	select BR2_PACKAGE_GUPNP_AV
	select BR2_PACKAGE_DBUS_LIB
	help
	  libraumfeld is a utility library for the Raumfeld software stack

	  http://www.raumfeld.com/

config BR2_PACKAGE_RAUMFELD_REPOSITORY
	string "raumfeld bazaar repository"
	default "sftp://bzr.internal/bzr"
	depends on BR2_PACKAGE_RAUMFELD
	help
	  location of the raumfeld bazaar repository 

config BR2_PACKAGE_LIBRAUMFELD_BRANCH
	string "libraumfeld branch"
	default "trunk"
	depends on BR2_PACKAGE_LIBRAUMFELD
	help
	  branch to checkout from the bazaar repository
