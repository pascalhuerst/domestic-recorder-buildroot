config BR2_PACKAGE_LIBRAUMFELDCPP
	bool "libraumfeldcpp"
	select BR2_PACKAGE_LIBRAUMFELD
	select BR2_INSTALL_LIBSTDCPP
	select BR2_PACKAGE_LIBSOUP
	help
	  libraumfeldcpp is a C++ utility library for the Raumfeld software
          stack

	  http://www.raumfeld.com/

config BR2_PACKAGE_LIBRAUMFELDCPP_BRANCH
	string "libraumfeldcpp branch"
	default "trunk"
	depends on BR2_PACKAGE_LIBRAUMFELDCPP
	help
	  branch to checkout from the bazaar repository
