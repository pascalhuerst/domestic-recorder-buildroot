#!/bin/sh

case "$1" in
  start)
       # change the mount options for the rootfs to noatime
       mount -o remount,noatime /

       # set the standby (spindown) timeout for the internal hard-disk
       hdparm -S60 /dev/hda

       # start the master-process
       cd /raumfeld/master-process
       ./raumfeld-master-sh.sh &
       ;;
  *)
       ;;
esac

exit $?
