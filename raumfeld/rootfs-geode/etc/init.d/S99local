#!/bin/sh

case "$1" in
  start)
       # change the mount options for the rootfs to noatime
       mount -o remount,noatime /

       # limit DMA mode to UDMA4 (66 MB/s)
       # (this will fail on the old disks because w/o the SATA
       #  adapter cable detection works and the driver limits
       #  the mode to UDMA2 (33 MB/s)
       hdparm -Xudma4

       # set the standby (spindown) timeout for the internal hard-disk
       hdparm -S60 /dev/hda

       # start the master-process
       cd /raumfeld/master-process
       ./raumfeld-master-sh.sh &
       ;;
  *)
       ;;
esac

exit $?
