#!/bin/sh
#
# avahi-daemon init script

export LD_PRELOAD=libpthread.so.0
DAEMON=/usr/sbin/avahi-daemon

case "$1" in
    start)
	$DAEMON -c || $DAEMON -D --no-drop-root
	;;
    stop)
	$DAEMON -c && $DAEMON -k
	;;
    reload)
	$DAEMON -c && $DAEMON -r
	;;
    *)
	echo "Usage: S50avahi-daemon {start|stop|reload}" >&2
	exit 1
	;;
esac
