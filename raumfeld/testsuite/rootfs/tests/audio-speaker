!#/bin/sh

. ../tests.inc

# set volume


amixer cset numid=1 218 >/dev/null 2>&1

# set code loopthru

dialog_info "Testing analog audio output." --title "ANALOGOUT"

if [ ! -z "$(aplay -l | grep "Raumfeld DDX")" ]; then
#Raumfeld One
amixer cset numid=2 1 >/dev/null 2>&1
aplay -D hw:0 /audiotest.wav >/dev/null 2>&1
else
amixer cset numid=2 0 >/dev/null 2>&1
aplay -D hw:0 /audiotest.wav >/dev/null 2>&1
fi


#dialog_msg "OK?" $DIALOGOPTS

