!#/bin/sh

. ../tests.inc

# set volume
amixer cset numid=1 160

if is_model "Element"; then
   amixer cset name="Ch1 Volume" 200
   amixer cset name="Ch2 Volume" 200
fi

if is_model "Connector"; then
   echo "testing S/P Diff and analog outputs, check if there is output"
else
   echo "testing speakers, check if sound can be heard"
fi

# initialize the DSP pseudo device on the Raumfeld One
if is_model "One"; then
   dd if=/dev/zero bs=1024 count=800 | aplay -D hw:0,2 -f cd -
fi

if is_model "Element"; then
   aplay -D hw:0 /audiotest.wav
   modprobe snd-usb-audio
   cd /raumfeld/factory-tests && ./factory-tests &
else
   aplay -D hw:0 /audiotest.wav &
fi
